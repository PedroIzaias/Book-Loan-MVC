@model LoansModel
@{
    ViewData["Title"] = "Register Loan";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Register Loans</h1>
    </div>
<form method="post" asp-controller="Loan" asp-action="Register">

    <div class="mb-3">
        <label for="Receiver" class="form-label text-light">Receiver:</label>
        <input type="text" class="form-control" asp-for="Receiver" id="Receiver" placeholder="Who is getting the book?">
    </div>

    <div class="mb-3">
        <label for="Provider" class="form-label text-light">Provider:</label>
        <input type="text" class="form-control" asp-for="Provider" id="Provider" placeholder="Who is lending the book?">
    </div>

    <div class="mb-3">
        <label for="Book" class="form-label text-light">Book:</label>
        <input type="text" class="form-control" asp-for="BorrowedBook" id="Book" placeholder="Which book is being borrowed?">
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">To add</button>
        <a class="btn btn-primary w-50" asp-controller="Loan" asp-action="Index">Back</a>
    </div>
</form>
</div>
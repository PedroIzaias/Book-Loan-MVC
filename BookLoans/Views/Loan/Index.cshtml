@model IEnumerable<LoansModel>

<div class="container">
  <div class="d-flex justify-content-between align-itens-center mb-5">
    <h1>Loans</h1>
    <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register">Register new loan</a>
  </div>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Receiver</th>
      <th scope="col">Provider</th>
      <th scope="col">Book</th>
      <th scope="col">Last Update</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null) 
    { 
        @foreach(var loan in Model)
        {
            <tr>
                <th scope="row">@loan.Receiver</th>
                <td>@loan.Provider</td>
                <td>@loan.BorrowedBook</td>
                <td>@loan.LastUpdateDate</td>
                <td>
                  <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning mx-2">Edit</a>
                  <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
</div>